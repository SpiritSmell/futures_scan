# Crypto Futures Collector v5 Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment
CRYPTO_COLLECTOR_ENVIRONMENT=development
CRYPTO_COLLECTOR_DEBUG=true

# RabbitMQ Configuration
CRYPTO_COLLECTOR_RABBITMQ__HOST=192.168.192.42
CRYPTO_COLLECTOR_RABBITMQ__PORT=5672
CRYPTO_COLLECTOR_RABBITMQ__USER=rmuser
CRYPTO_COLLECTOR_RABBITMQ__PASSWORD=rmpassword
CRYPTO_COLLECTOR_RABBITMQ__VHOST=/
CRYPTO_COLLECTOR_RABBITMQ__EXCHANGE=futures_price_collector
CRYPTO_COLLECTOR_RABBITMQ__OUT_EXCHANGE=futures_price_collector_out

# Database Configuration (ClickHouse)
CRYPTO_COLLECTOR_DATABASE__ENABLED=false
CRYPTO_COLLECTOR_DATABASE__HOST=localhost
CRYPTO_COLLECTOR_DATABASE__PORT=9000
CRYPTO_COLLECTOR_DATABASE__DATABASE=crypto_data
CRYPTO_COLLECTOR_DATABASE__USER=default
CRYPTO_COLLECTOR_DATABASE__PASSWORD=

# Exchange API Keys (Binance)
CRYPTO_COLLECTOR_API_KEYS__BINANCE__APIKEY=your_binance_api_key_here
CRYPTO_COLLECTOR_API_KEYS__BINANCE__SECRET=your_binance_secret_here

# Exchange API Keys (Bybit)
CRYPTO_COLLECTOR_API_KEYS__BYBIT__APIKEY=your_bybit_api_key_here
CRYPTO_COLLECTOR_API_KEYS__BYBIT__SECRET=your_bybit_secret_here

# Exchange API Keys (Bitget)
CRYPTO_COLLECTOR_API_KEYS__BITGET__APIKEY=your_bitget_api_key_here
CRYPTO_COLLECTOR_API_KEYS__BITGET__SECRET=your_bitget_secret_here

# Exchange API Keys (HTX)
CRYPTO_COLLECTOR_API_KEYS__HTX__APIKEY=your_htx_api_key_here
CRYPTO_COLLECTOR_API_KEYS__HTX__SECRET=your_htx_secret_here

# Exchange API Keys (Gate.io)
CRYPTO_COLLECTOR_API_KEYS__GATEIO__APIKEY=your_gateio_api_key_here
CRYPTO_COLLECTOR_API_KEYS__GATEIO__SECRET=your_gateio_secret_here

# Performance Settings
CRYPTO_COLLECTOR_PERFORMANCE__ENABLE_METRICS=true
CRYPTO_COLLECTOR_PERFORMANCE__METRICS_INTERVAL=60.0
CRYPTO_COLLECTOR_PERFORMANCE__ENABLE_PROFILING=false
CRYPTO_COLLECTOR_PERFORMANCE__MAX_MEMORY_USAGE=2048
CRYPTO_COLLECTOR_PERFORMANCE__MAX_CPU_USAGE=80.0

# Logging Configuration
CRYPTO_COLLECTOR_LOGGING__LEVEL=INFO
CRYPTO_COLLECTOR_LOGGING__FILE_ENABLED=true
CRYPTO_COLLECTOR_LOGGING__FILE_PATH=logs/crypto_collector.log
CRYPTO_COLLECTOR_LOGGING__CONSOLE_ENABLED=true

# Cache Configuration
CRYPTO_COLLECTOR_CACHE__ENABLED=true
CRYPTO_COLLECTOR_CACHE__DEFAULT_TTL=300.0
CRYPTO_COLLECTOR_CACHE__MAX_SIZE=10000
CRYPTO_COLLECTOR_CACHE__CLEANUP_INTERVAL=60.0

# Batch Processing Configuration
CRYPTO_COLLECTOR_BATCH__ENABLED=true
CRYPTO_COLLECTOR_BATCH__MAX_SIZE=100
CRYPTO_COLLECTOR_BATCH__MAX_WAIT_TIME=5.0
CRYPTO_COLLECTOR_BATCH__STRATEGY=size_based
CRYPTO_COLLECTOR_BATCH__COMPRESSION_ENABLED=true

# Data Collection Intervals
CRYPTO_COLLECTOR_TICKER_INTERVAL=30.0
CRYPTO_COLLECTOR_FUNDING_RATE_INTERVAL=300.0
CRYPTO_COLLECTOR_ENABLE_CHANGE_DETECTION=true

# Exchange List (comma-separated)
CRYPTO_COLLECTOR_EXCHANGES=["binance","bybit","bitget","htx","gateio"]
